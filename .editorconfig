# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.pw.toml]
end_of_line = unset
indent_style = unset
indent_size = unset
charset = unset
trim_trailing_whitespace = false
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
